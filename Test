<body>
    <div class="container">
        <header>
            <h1>üè† Furniture Inventory Manager</h1>
            <p>Track your furniture with photos, locations, and details</p>
            <button onclick="exportData()">üì• Export Backup</button>
        </header>

        <!-- Statistics -->
        <div class="stats" id="stats">
            <div class="stat-card">
                <div class="stat-number" id="totalItems">0</div>
                <div class="stat-label">Total Items</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="totalQuantity">0</div>
                <div class="stat-label">Total Pieces</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="uniqueLocations">0</div>
                <div class="stat-label">Locations</div>
            </div>
        </div>

        <!-- Search & Filter -->
        <div class="search-filter">
            <input type="text" id="searchInput" placeholder="üîç Search by name or description..." oninput="filterItems()">
            <select id="locationFilter" onchange="filterItems()">
                <option value="">All Locations</option>
            </select>
        </div>

        <!-- Add New Item Form -->
        <div class="form-section">
            <h2 id="formTitle">üì∏ Add New Furniture Item</h2>
            <form id="inventoryForm" onsubmit="saveItem(event)">
                <input type="hidden" id="itemId">
                
                <label for="photoInput" class="photo-upload" id="photoUploadArea">
                    üì∑ Click to Upload Photo
                </label>
                <input type="file" id="photoInput" accept="image/*" class="hidden" onchange="previewPhoto(event)">
                
                <img id="photoPreview" class="photo-preview hidden">
                
                <div class="form-grid">
                    <input type="text" id="itemName" placeholder="Furniture Name (e.g., Oak Dining Table)" required>
                    <input type="number" id="itemQuantity" placeholder="Quantity" min="1" value="1" required>
                    <input type="text" id="itemLocation" placeholder="Location (e.g., Living Room)" required>
                </div>
                
                <textarea id="itemDescription" rows="3" placeholder="Description, notes, condition, etc..."></textarea>
                
                <div class="controls" style="margin-top: 15px;">
                    <button type="submit" id="submitBtn">üíæ Save Item</button>
                    <button type="button" onclick="resetForm()" class="danger">‚ùå Cancel</button>
                </div>
            </form>
        </div>

        <!-- Inventory List -->
        <div id="inventoryList">
            <h2 style="margin-bottom: 20px;">üìã Your Inventory</h2>
            <div id="itemsGrid" class="inventory-grid">
                <!-- Items will appear here -->
            </div>
            <div id="emptyState" class="empty-state">
                <h3>No furniture added yet!</h3>
                <p>Start by adding your first item above ‚òùÔ∏è</p>
            </div>
        </div>
    </div>

    <script>
        // Data Storage - Everything saved in your browser
        let inventory = JSON.parse(localStorage.getItem('furnitureInventory')) || [];
        let editingId = null;

        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            renderInventory();
            updateStats();
            updateLocationFilter();
            
            // Make photo upload area clickable
            document.getElementById('photoUploadArea').addEventListener('click', () => {
                document.getElementById('photoInput').click();
            });
        });

        // Preview photo before upload
        function previewPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('photoPreview');
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    document.getElementById('photoUploadArea').textContent = 'üîÑ Change Photo';
                };
                reader.readAsDataURL(file);
            }
        }

        // Save or update item
        function saveItem(event) {
            event.preventDefault();
            
            const id = editingId || Date.now().toString();
            const name = document.getElementById('itemName').value;
            const quantity = parseInt(document.getElementById('itemQuantity').value);
            const location = document.getElementById('itemLocation').value;
            const description = document.getElementById('itemDescription').value;
            const photo = document.getElementById('photoPreview').src;
            
            const item = {
                id,
                name,
                quantity,
                location,
                description,
                photo: photo && photo.includes('data:image') ? photo : null,
                createdAt: editingId ? inventory.find(i => i.id === id).createdAt : new Date().toISOString(),
                updatedAt: new Date().toISOString()
            };
            
            if (editingId) {
                const index = inventory.findIndex(i => i.id === id);
                inventory[index] = item;
            } else {
                inventory.push(item);
            }
            
            localStorage.setItem('furnitureInventory', JSON.stringify(inventory));
            
            resetForm();
            renderInventory();
            updateStats();
            updateLocationFilter();
            
            // Show success message
            alert(editingId ? '‚úÖ Item updated successfully!' : '‚úÖ Item added successfully!');
        }

        // Render all items
        function renderInventory() {
            const grid = document.getElementById('itemsGrid');
            const emptyState = document.getElementById('emptyState');
            
            if (inventory.length === 0) {
                grid.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }
            
            emptyState.style.display = 'none';
            
            const filtered = getFilteredItems();
            
            grid.innerHTML = filtered.map(item => `
                <div class="item-card">
                    ${item.photo ? 
                        `<img src="${item.photo}" alt="${item.name}" class="item-photo">` : 
                        `<div style="height: 200px; background: #f7fafc; display: flex; align-items: center; justify-content: center; color: #cbd5e0;">No Photo</div>`
                    }
                    <div class="item-details">
                        <div class="item-title">${item.name}</div>
                        <div class="item-meta">
                            <span>üì¶ Qty: ${item.quantity}</span>
                            <span>üìç ${item.location}</span>
                        </div>
                        ${item.description ? `<div class="item-description">${item.description}</div>` : ''}
                        <div class="item-actions">
                            <button onclick="editItem('${item.id}')">‚úèÔ∏è Edit</button>
                            <button class="danger" onclick="deleteItem('${item.id}')">üóëÔ∏è Delete</button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Get filtered items based on search and location
        function getFilteredItems() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const location = document.getElementById('locationFilter').value;
            
            return inventory.filter(item => {
                const matchesSearch = item.name.toLowerCase().includes(search) || 
                                    item.description.toLowerCase().includes(search);
                const matchesLocation = !location || item.location === location;
                return matchesSearch && matchesLocation;
            });
        }

        // Filter items on input change
        function filterItems() {
            renderInventory();
        }

        // Edit item
        function editItem(id) {
            const item = inventory.find(i => i.id === id);
            if (!item) return;
            
            editingId = id;
            
            document.getElementById('itemId').value = id;
            document.getElementById('itemName').value = item.name;
            document.getElementById('itemQuantity').value = item.quantity;
            document.getElementById('itemLocation').value = item.location;
            document.getElementById('itemDescription').value = item.description;
            
            if (item.photo) {
                const preview = document.getElementById('photoPreview');
                preview.src = item.photo;
                preview.classList.remove('hidden');
                document.getElementById('photoUploadArea').textContent = 'üîÑ Change Photo';
            }
            
            document.getElementById('formTitle').textContent = '‚úèÔ∏è Edit Furniture Item';
            document.getElementById('submitBtn').textContent = 'üíæ Update Item';
            
            // Scroll to form
            document.querySelector('.form-section').scrollIntoView({ behavior: 'smooth' });
        }

        // Delete item
        function deleteItem(id) {
            if (confirm('üóëÔ∏è Are you sure you want to delete this item?')) {
                inventory = inventory.filter(i => i.id !== id);
                localStorage.setItem('furnitureInventory', JSON.stringify(inventory));
                renderInventory();
                updateStats();
                updateLocationFilter();
            }
        }

        // Reset form
        function resetForm() {
            document.getElementById('inventoryForm').reset();
            document.getElementById('itemId').value = '';
            document.getElementById('photoPreview').classList.add('hidden');
            document.getElementById('photoUploadArea').textContent = 'üì∑ Click to Upload Photo';
            document.getElementById('formTitle').textContent = 'üì∏ Add New Furniture Item';
            document.getElementById('submitBtn').textContent = 'üíæ Save Item';
            editingId = null;
        }

        // Update statistics
        function updateStats() {
            document.getElementById('totalItems').textContent = inventory.length;
            document.getElementById('totalQuantity').textContent = inventory.reduce((sum, item) => sum + item.quantity, 0);
            
            const locations = new Set(inventory.map(item => item.location));
            document.getElementById('uniqueLocations').textContent = locations.size;
        }

        // Update location filter dropdown
        function updateLocationFilter() {
            const select = document.getElementById('locationFilter');
            const locations = [...new Set(inventory.map(item => item.location))].sort();
            
            // Keep "All Locations" option
            const currentValue = select.value;
            select.innerHTML = '<option value="">All Locations</option>';
            
            locations.forEach(location => {
                const option = document.createElement('option');
                option.value = location;
                option.textContent = location;
                select.appendChild(option);
            });
            
            select.value = currentValue;
        }

        // Export data as JSON backup
        function exportData() {
            const dataStr = JSON.stringify(inventory, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `furniture-inventory-backup-${new Date().toISOString().split('T')[0]}.json`;
            link.click();
            URL.revokeObjectURL(url);
        }

        // Import data (you can add this later if needed)
        // For now, you can manually paste JSON into localStorage if you need to restore
    </script>
</body>
</html>
